{
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "tokenRef": "GITHUB_TOKEN",
    "comments": {
      "submit": true,
      "pr": "This PR is included in version"
    }
  },
  "git": {
    "commitMessage": "chore(release): v${version} [skip-ci]\n\n${changelog}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false,
    "ignoreVersion": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits"
      }
    }
  }
}
