{
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "cat CHANGELOG.md | tail -n +3 | sed '/^$/q'"
  },
  "git": {
    "commitMessage": "chore(release): v${version} [skip-ci]\n\n${changelog}"
  },
  "npm": {
    "publish": false,
    "ignoreVersion": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits"
      }
    }
  }
}
