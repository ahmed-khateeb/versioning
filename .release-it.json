{
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "cat CHANGELOG.md | tail -n +3 | sed '/^$/q'"
  },
  "git": {
    "commitMessage": "chore(release): v${version} [skip-ci]\n\n$(git diff CHANGELOG.md)"
  },
  "hooks": {
    "before:init": ["git pull"],
    "after:bump": "npx auto-changelog -p"
  },
  "npm": {
    "publish": false,
    "ignoreVersion": false
  }
}
